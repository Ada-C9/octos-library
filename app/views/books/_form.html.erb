<h4>
  <% page_title ||= "Cool Page You Made" %>
  <%= page_title %>
</h4>

<% if @book.errors.messages.any? %>
  <section class="error-messages">
    <h3>There were some problems</h3>
    <ul>
      <% @book.errors.messages.each do |field, problems| %>
        <% problems.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author, "Auttttthor" %>
  <%= f.select :author_id, Author.all.map{ |auth| [auth.name, auth.id] } %>

  <%= f.label :publication_year %>
  <%= f.number_field :publication_year %>

  <%= f.label :synopsis %>
  <%= f.text_area :synopsis %>

  <%= f.submit %>
<% end %>
