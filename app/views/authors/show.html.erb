<h2><%= @author.name %></h2>

<p><%= @author.bio %></p>

<section>
  <h3>Bibliography</h3>
  <p>This author was first published <%= @author.first_published %></p>

  <ul>
    <% @author.books.each do |book| %>
    <li>
      <%= link_to book.title, book_path(book) %>
      <% if book.publication_year %>
        (<%= book.publication_year %>)
      <% end %>
    </li>
    <% end %>
  </ul>
</section>
